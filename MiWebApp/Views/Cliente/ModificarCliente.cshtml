@model ModificarClienteViewModel

<h2>Modificar Cliente</h2>

<form asp-controller="Cliente" asp-action="ModificarCliente" method="post">
    <input type="hidden" asp-for="ClienteId" /> 

    <div class="form-group">
        <label asp-for="Nombre">Nombre</label>
        <input asp-for="Nombre" class="form-control" required />
    </div>
    
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" type="email" required />
    </div>

    <div class="form-group">
        <label asp-for="Telefono">Telefono</label>
        <input asp-for="Telefono" class="form-control" type="tel" required />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Guardar cambios</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>