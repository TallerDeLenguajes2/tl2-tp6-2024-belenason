@model AltaProductoViewModel

<h2>Crear Nuevo Producto</h2>

<form asp-controller= "Producto" asp-action="CrearProducto" method="post">
    <div class="form-group">
        <label asp-for="Descripcion">Descripci√≥n</label>
        <input asp-for="Descripcion" class="form-control" required />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Precio">Precio</label>
        <input asp-for="Precio" class="form-control" type="number" required />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Crear Producto</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}