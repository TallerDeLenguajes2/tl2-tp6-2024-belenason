@model ModificarProductoViewModel

<h2>Modificar Producto</h2>

<form asp-controller="Producto" asp-action="ModificarProducto" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Descripcion">Descripci√≥n</label>
        <input asp-for="Descripcion" class="form-control" required />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Precio">Precio</label>
        <input asp-for="Precio" class="form-control" type="number" required />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="IdProducto" />

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Guardar cambios</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}
